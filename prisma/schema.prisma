// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../lib/prisma"
}

datasource db {
  provider = "postgresql"
}

enum SkillCategory {
  HARD
  SOFT
  META
}

enum AssessmentStatus {
  IN_PROGRESS
  COMPLETED
  REVIEW_PENDING
}

enum MilestoneStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

enum VerificationMethod {
  SELF_REPORTED
  AI_VERIFIED
}

enum MentorInteractionType {
  QUESTION
  CHECK_IN
  VERIFICATION
  MILESTONE
}

model User {
  id               String    @id @default(uuid())
  githubId         String?   @unique
  email            String?   @unique
  emailVerified    Boolean   @default(false)
  name             String?
  image            String?
  cvUrl            String?
  useCvForAnalysis Boolean   @default(false)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  assessments        Assessment[]
  evidences          Evidence[]
  sessions           Session[]
  accounts           Account[]
  roadmaps           Roadmap[]
  skillHistory       UserSkillHistory[]
  mentorInteractions MentorInteraction[]
  chatConversations  ChatConversation[]
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)

  @@index([userId])
}

model Account {
  id                String   @id
  accountId         String
  providerId        String
  userId            String
  accessToken       String?
  refreshToken      String?
  idToken           String?
  accessTokenExpiresAt DateTime?
  refreshTokenExpiresAt DateTime?
  scope             String?
  password          String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(references: [id], fields: [userId], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@index([userId])
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, value])
}

model Skill {
  id              String        @id @default(uuid())
  name            String        @unique
  category        SkillCategory
  domain          String?
  difficulty      Int?
  marketRelevance Float?
  assessable      Boolean       @default(true)
  transferable    Boolean       @default(false)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  fromRelations     SkillRelation[]    @relation("fromSkill")
  toRelations       SkillRelation[]    @relation("toSkill")
  assessmentResults AssessmentResult[]
  resourceSkills    ResourceSkill[]
  userHistory       UserSkillHistory[]

  @@index([category])
  @@index([domain])
}

model SkillRelation {
  id          String   @id @default(uuid())
  fromSkillId String
  toSkillId   String
  strength    Float    @default(1.0)
  createdAt   DateTime @default(now())

  fromSkill Skill @relation("fromSkill", fields: [fromSkillId], references: [id], onDelete: Cascade)
  toSkill   Skill @relation("toSkill", fields: [toSkillId], references: [id], onDelete: Cascade)

  @@unique([fromSkillId, toSkillId])
  @@index([fromSkillId])
  @@index([toSkillId])
}

model Assessment {
  id              String           @id @default(uuid())
  userId          String
  currentRole     String?
  targetRole      String?
  yearsExperience String?
  industry        String?
  careerIntent    String?
  status            AssessmentStatus @default(IN_PROGRESS)
  lastStepCompleted Int?             @default(1) // 1=profile, 2=goal, 3=self-eval, 4=test, 5=evidence
  startedAt         DateTime         @default(now())
  completedAt       DateTime?

  user    User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  results AssessmentResult[]
  gaps    AssessmentGaps?
  roadmap Roadmap?

  @@index([userId])
  @@index([status])
}

model AssessmentResult {
  id           String   @id @default(uuid())
  assessmentId String
  skillId      String
  level        Int
  confidence   Float
  shouldTest   Boolean  @default(false)
  notes        String?
  rawAIOutput  Json?
  createdAt    DateTime @default(now())

  assessment Assessment @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
  skill      Skill      @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@unique([assessmentId, skillId])
  @@index([assessmentId])
  @@index([skillId])
}

model AssessmentGaps {
  id                    String   @id @default(uuid())
  assessmentId          String   @unique
  readinessScore        Int
  gaps                  Json     // Array of gap objects with skillId, skillName, currentLevel, targetLevel, gapSize, impact, priority, etc.
  strengths             String[] // Array of skill names
  overallRecommendation String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  assessment Assessment @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
  gapResources GapResources[]

  @@index([assessmentId])
}

model GapResources {
  id                    String   @id @default(uuid())
  assessmentGapId       String
  skillId               String
  skillName             String
  resources             Json     // Array of resource objects
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  assessmentGap AssessmentGaps @relation(fields: [assessmentGapId], references: [id], onDelete: Cascade)

  @@unique([assessmentGapId, skillId])
  @@index([assessmentGapId])
  @@index([skillId])
}

model Resource {
  id            String   @id @default(uuid())
  provider      String
  url           String
  title         String?
  cost          String?
  estimatedTime Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  resourceSkills ResourceSkill[]

  @@index([provider])
}

model ResourceSkill {
  id         String   @id @default(uuid())
  resourceId String
  skillId    String
  createdAt  DateTime @default(now())

  resource Resource @relation(fields: [resourceId], references: [id], onDelete: Cascade)
  skill    Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@unique([resourceId, skillId])
  @@index([resourceId])
  @@index([skillId])
}

model Evidence {
  id             String    @id @default(uuid())
  userId         String
  provider       String?
  referenceUrl   String?
  signals        Json?
  rawStored      Boolean   @default(false)
  retentionUntil DateTime?
  createdAt      DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// ============================================
// ROADMAP & PROGRESS TRACKING
// ============================================

model Roadmap {
  id           String    @id @default(uuid())
  assessmentId String    @unique
  userId       String
  title        String
  totalWeeks   Int
  startedAt    DateTime  @default(now())
  completedAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  assessment         Assessment          @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
  user               User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  milestones         RoadmapMilestone[]
  mentorInteractions MentorInteraction[]

  @@index([userId])
  @@index([assessmentId])
}

model RoadmapMilestone {
  id          String          @id @default(uuid())
  roadmapId   String
  skillId     String
  weekNumber  Int
  title       String
  description String?
  resources   Json
  status      MilestoneStatus @default(PENDING)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  roadmap  Roadmap             @relation(fields: [roadmapId], references: [id], onDelete: Cascade)
  progress MilestoneProgress[]

  @@index([roadmapId])
  @@index([skillId])
  @@index([weekNumber])
}

model MilestoneProgress {
  id                  String             @id @default(uuid())
  milestoneId         String
  verificationMethod  VerificationMethod
  selfReportedAt      DateTime?
  aiVerifiedAt        DateTime?
  aiVerificationScore Float?
  aiVerificationNotes String?
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt

  milestone RoadmapMilestone @relation(fields: [milestoneId], references: [id], onDelete: Cascade)

  @@index([milestoneId])
}

// ============================================
// CROSS-ASSESSMENT KNOWLEDGE (USER-LEVEL)
// ============================================

model UserSkillHistory {
  id           String             @id @default(uuid())
  userId       String
  skillId      String
  level        Int
  confidence   Float
  source       VerificationMethod
  assessmentId String?
  createdAt    DateTime           @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  skill Skill @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([skillId])
  @@index([userId, skillId])
}

// ============================================
// PERSISTENT AI MENTOR MEMORY
// ============================================

model MentorInteraction {
  id            String                @id @default(uuid())
  userId        String
  roadmapId     String?
  type          MentorInteractionType
  userMessage   String?
  mentorMessage String
  context       Json?
  createdAt     DateTime              @default(now())

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  roadmap Roadmap? @relation(fields: [roadmapId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([roadmapId])
  @@index([createdAt])
}

// ============================================
// CHAT CONVERSATIONS
// ============================================

model ChatConversation {
  id        String   @id @default(uuid())
  userId    String
  title     String?
  messages  Json     @default("[]") // UIMessage[] from AI SDK
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}
